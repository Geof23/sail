# PNG plugin information
#
[plugin]
layout=2
version=1.1.3
name=PNG
description=Portable Network Graphics
extensions=png
mime-types=image/png

[read-features]
features=STATIC;META-INFO;INTERLACED
output-pixel-formats=SOURCE;BPP24-RGB;BPP24-BGR;BPP32-RGBA;BPP32-BGRA;BPP32-ARGB;BPP32-ABGR
preferred-output-pixel-format=BPP32-RGBA

[write-features]
features=STATIC;META-INFO;INTERLACED
properties=
interlaced-passes=7
compression-types=
preferred-compression-type=
compression-min=1
compression-max=9
compression-default=6

[write-pixel-formats-mapping]
BPP24-RGB=SOURCE
BPP24-BGR=SOURCE
BPP48-RGB=SOURCE
BPP48-BGR=SOURCE
BPP32-RGBA=SOURCE
BPP32-BGRA=SOURCE
BPP32-ARGB=SOURCE
BPP32-ABGR=SOURCE
BPP64-RGBA=SOURCE
BPP64-BGRA=SOURCE
BPP64-ARGB=SOURCE
BPP64-ABGR=SOURCE
