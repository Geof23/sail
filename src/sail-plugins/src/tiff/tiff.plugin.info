# TIFF plugin information
#
[plugin]
layout=3
version=1.0.1
name=TIFF
description=Tagged Image File Format
magic-numbers=49 49 2A 00;4D 4D 00 2A
extensions=tif;tiff
mime-types=image/tiff;image/tiff-fx

[read-features]
features=STATIC;MULTI-FRAME;META-INFO;ICCP
output-pixel-formats=BPP32-RGBA;BPP32-BGRA
default-output-pixel-format=@SAIL_DEFAULT_READ_OUTPUT_PIXEL_FORMAT@

[write-features]
features=STATIC;MULTI-FRAME;META-INFO;ICCP
properties=
interlaced-passes=1
compression-types=
preferred-compression-type=UNSUPPORTED
compression-min=1
compression-max=9
compression-default=6

[write-pixel-formats-mapping]
BPP1-INDEXED=SOURCE
BPP2-INDEXED=SOURCE
BPP4-INDEXED=SOURCE
BPP8-INDEXED=SOURCE
BPP24-RGB=SOURCE
BPP24-BGR=SOURCE
BPP48-RGB=SOURCE
BPP48-BGR=SOURCE
BPP32-RGBA=SOURCE
BPP32-BGRA=SOURCE
BPP32-ARGB=SOURCE
BPP32-ABGR=SOURCE
BPP64-RGBA=SOURCE
BPP64-BGRA=SOURCE
BPP64-ARGB=SOURCE
BPP64-ABGR=SOURCE
